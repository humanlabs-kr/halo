[Unit]
Description=Fluence OCR Service
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/opt/fluence-ocr
Environment="OCR_SERVICE_PORT=5000"
ExecStart=/opt/fluence-ocr/venv/bin/python3 /opt/fluence-ocr/src/service.py
Restart=on-failure
RestartSec=10

# Security settings
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=yes
PrivateTmp=yes
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
